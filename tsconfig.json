{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		/* JavaScript Support */
		"allowJs": true,
		"checkJs": true,

		/* Modules */
		"module": "commonjs",
		"lib": ["es2022", "dom"],
		"noEmit": true,

		/* Aliases */
		"baseUrl": "./",

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "playwright-report"]
}
